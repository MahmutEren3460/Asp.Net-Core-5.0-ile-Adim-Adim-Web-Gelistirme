@using EntityLayer.Concrete
@model List<Announcement>
@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/Shared/_WriteLayout.cshtml";
}
@*@{
    string color = "";
}*@

<div class="col-lg-12 grid-margin stretch-card">
	<div class="card">
		<div class="card-body">
			<h4 class="card-title">Duyurular</h4>
			<div class="table-responsive">
				<table class="table">
					<thead>
						<tr>
							<th>#</th>
							<th>Başlık</th>
							<th>Tarih</th>
							<th>Durum</th>
							<th>Detaylar</th>
						</tr>
					</thead>
					<tbody>
						@foreach (var item in Model)
						{
							@*@if (item.Status == "Yeni Yazı")
						{
						color = "badge badge-success";
						}
						@if (item.Status == "Yeni")
						{
						color = "badge badge-warning";
						}
						@if (item.Status == "Test")
						{
						color = "badge badge-info";
						}*@
							<tr>
								<th>@item.ID</th>
								<td>@item.Title</td>
								<td>@(((DateTime)item.Date).ToString("dd-MMM-yyyy"))</td>
								<td><label class="badge badge-success">@item.Status</label></td>
								<td><a href="/Writer/Default/AnnouncementDetails/@item.ID" class="btn btn-outline-primary">Detaylar</a></td>
							</tr>
						}
					</tbody>
				</table>
			</div>
		</div>
	</div>
</div>

