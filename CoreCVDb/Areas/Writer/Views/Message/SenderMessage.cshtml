						@if (item.Status == "Yeni")
						{
						color = "badge badge-warning";
						}
						@if (item.Status == "Test")
						{
						color = "badge badge-info";
						}*@
							<tr>
								<th>@item.WriterMessageID</th>
								<td>@item.Subject</td>
