@using EntityLayer.Concrete
@model List<Testimonial>
@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

<div class="row ">
	<div class="col-12 grid-margin">
		<div class="card">
			<div class="card-body">
				<h4 class="card-title">Referans Listesi</h4>
				<div class="table-responsive">
					<table class="table">
						<thead>
							<tr>
					
								<th> # </th>
								<th> Ad Soyad </th>
								<th> Şirket </th>
								<th> Unvan </th>
								<th> Sil </th>
								<th> Düzenle </th>
							</tr>
						</thead>
						<tbody>
							@foreach (var item in Model)
							{
								<tr>
									<td>
										<img src="@item.ImageUrl" alt="image" />
									</td>

									<td> @item.ClientName </td>
									<td> @item.Company </td>
									<td>@item.Title  </td>
									<td><a href="/Testimonial/DeleteTestimonail/@item.TestimonialID" class="btn btn-outline-danger">Sil</a></td>
									<td><a href="/Testimonial/EditTestimonail/@item.TestimonialID" class="btn btn-outline-success">Düzenle</a></td>
								</tr>
							}
					</table>
					<a href="/Testimonial/AddTestimonail/" class="btn btn-outline-info">Yeni Referans Ekle</a>
				</div>
			</div>
		</div>
	</div>
</div>
