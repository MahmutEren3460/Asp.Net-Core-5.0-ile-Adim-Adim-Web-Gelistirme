@using EntityLayer.Concrete
@model List<WriterMessage>

    @foreach(var item in Model){
    <div class="dropdown-divider"></div>
    <a class="dropdown-item preview-item" href="/AdminMessage/Index">
        <div class="preview-thumbnail">
            <img src="~/corona-free-dark-bootstrap-admin-template-1.0.0/template/assets/images/faces/face4.jpg" alt="image" class="rounded-circle profile-pic">
        </div>
        <div class="preview-item-content">
            <p class="preview-subject ellipsis mb-1">@item.SenderName sana yeni bir mesaj gönderdi</p>
            <p class="text-muted mb-0"> @(((DateTime)item.Date).ToString("dd-MMM-yyyy")) </p>
        </div>
    </a>
    }
    <p class="p-3 mb-0 text-center">3 yeni mesaj</p>

